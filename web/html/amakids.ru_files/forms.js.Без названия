    if(phone.val().length<7){phone.addClass('error_input');phone.css('border','1px solid #f99c19')}else{phone.removeClass('error_input');phone.css('border','1px solid #d9e4ea')}
    if(filial.val()==0||filial.val()=="0"||!filial.val()){filial.addClass('error_input');filial.css('border','1px solid #f99c19')}else{filial.removeClass('error_input');filial.css('border','1px solid #d9e4ea')}
    if(city.val()==0||city.val()=="0"||!city.val()){city.addClass('error_input');city.css('border','1px solid #f99c19')}else{city.removeClass('error_input');city.css('border','1px solid #d9e4ea')}
    if(check.prop('checked')==!1){$('.label-text').css('color','#f99c19');$('.checked').css('border','1px solid #f89c19')}else{$('.label-text').css('color','#697379');$('.checked').css('border','1px solid #d9e4ea')}
    if(!sendFlag&&!name.hasClass('error_input')&&!phone.hasClass('error_input')&&!email.hasClass('error_input')&&check.prop('checked')!=!1&&city.val()!=0&&city.val()!="0"&&city.val()&&filial.val()!=0&&filial.val()!="0"&&filial.val()){var data=wrapper.serialize();$.ajax({url:'/addleadajax/',type:"POST",data:data,beforeSend:function(){sendFlag=!0;wrapper.find('button.button').val('ОТПРАВКА...').css('background','#9E9E9E').attr('disabled',!0)},success:function(data){if(data.status==!0){$('#addleadform').hide();$('#thx_free_lesson').show();$('.reviews-form-wrapper').css('height','auto');try{toGoalsYandex('addleadajax','send');toGoalsGoogle('addleadajax','send')}catch(error){$.getScript("/js/goals.js",function(){toGoalsYandex('addleadajax','send');toGoalsGoogle('addleadajax','send')})}}
    else{alert("Ошибка отправки, попробуйте проверить правильность ввода данных!");$('.button-free-lesson').val('ПЕРЕЗВОНИТЕ МНЕ').css('background','#f89c19').attr('disabled',!1)}}})}});$(document).on('submit','#director_message',function(e){var error=!1;e.preventDefault();$this=$('#director_message');var email=$this.find('input[name=user_email]').val();if(!isValidEmailAddress(email)){error=!0;$this.find('input[name=user_email]').attr('style','border-color: #f00;')}else{$this.find('input[name=user_email]').removeAttr('style')}
